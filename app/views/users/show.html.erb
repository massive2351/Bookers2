<div class="containar">
    <div class="row offset-md-1">
     <div class="col-md-2 ">
         <h2>User Info</h2>
         <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback:"no_image.png", size:'100x100' %>
           <table class="table">
            <tbody>
             <tr>
              <th>Name</th>
              <th><%= @user.name %></th>
             </tr>
             <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
             </tr>
            </tbody>
            </table>
            <div class="row">
             <% if @user.id == current_user.id %>
              <%= link_to "ユーザー編集", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
             <% end %>
             </div>
             <h2 class=>New Book</h2>
                  <div class="col-lg-2">
                   <%= form_for @booknew do |f| %>
                    <%= f.label :title %>
                    <%= f.text_field :title %>
                    <%= f.label :body %>
                    <%= f.text_area :body %>
                    <%= f.submit %>
                   <% end %>
                  </div>
      </div>
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
       </thead>
          <tbody>
            <% @user.books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
     </div>
    </div>
</div>
