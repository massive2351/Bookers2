<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
       <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :image %>
      </div>
       <div class="form-group">
        <%= f.label :profile %>
        <%= f.text_area :profile %>
      </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>