<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback:"no_image.png", size: '100x100' %><br>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
          <% if @user.id == current_user.id %>
            <%= link_to "ユーザー編集", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
          <% end %>
      <h2 class=>New book</h2>
      <div class="row">
        <div class="col-lg-2">
          <%= form_for @booknew do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.label :body %>
            <%= f.text_area :body %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :image, :fill, 100, 100, fallback:"no_image.png", size: '100x100' %></td>
            <td><%= user.name %></td>
            <td>
              <%= link_to "Show", user_path(user) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

