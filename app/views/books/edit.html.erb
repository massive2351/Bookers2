<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h1>Editing</h1>
      <%= form_for @book do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>
        <%= f.submit "Update Book" %>
      <% end %>
    </div>
  </div>
</div>