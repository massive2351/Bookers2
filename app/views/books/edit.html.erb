<% if @book.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_for @book do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body %>
        </div>
          <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to "Show", book_path(@book)  %>
      <%= link_to "Back", books_path  %>
    </div>
  </div>
</div>