
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @book.user, :image, :fill, 100, 100, fallback:"no_image.png", size: '100x100' %><br>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to "ユーザー編集", edit_user_path(@book.user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>

      <% if @book.errors.any? %>
        <div class="notification is-danger">
          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2 class=>New book</h2>
      <div class="row">
        <div class="col-lg-2">
          <%= form_for @booknew do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.label :body %>
            <%= f.text_area :body %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :image, :fill, 100, 100, fallback:"no_image.png", size: '80x80' %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= simple_format @book.body %></td>
            <td>
              <% if @book.user.id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book) %>
                <%= link_to "Destroy", book_path(@book.id), method: :delete  %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>