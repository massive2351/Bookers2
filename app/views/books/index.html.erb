<div class="containar">
  <div class="row offset-md-1">
    <div class="col-md-2 ">
      <%= form_for @book do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :body %>
        <%= f.text_area :body %>
        <%= f.submit %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag book.user, :image, :fill, 100, 100, fallback:"no_image.png", size: '80x80' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>