<% if @book.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="containar">
  <div class="row offset-md-1">
    <div class="col-md-2 ">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, fallback:"no_image.png", size: '100x100' %><br>
      <table class="table">
        <tbody>
          <tr>
            <th>Name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <% if @user.id == current_user.id %>
          <%= link_to "ユーザー編集", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        <% end %>

      <h2 class=>New Book</h2>
      <div class="row">
        <div class="col-lg-2">
          <%= form_for @book do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            <%= f.label :body %>
            <%= f.text_area :body %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :image, :fill, 100, 100, fallback:"no_image.png", size: '80x80' %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>